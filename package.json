{
    "name": "leren-platform",
    "version": "1.0.0",
    "private": true,
    "packageManager": "npm@10.8.2",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "clean": "turbo run clean",
        "web:dev": "npm run dev -w web",
        "web:build": "npm run build -w web",
        "web:start": "npm start -w web",
        "web:lint": "npm run lint -w web",
        "electron:dev": "npm run electron:dev -w web",
        "electron:build": "npm run electron:build -w web",
        "setup": "npm install"
    },
    "devDependencies": {
        "next": "15.1.6",
        "turbo": "^2.0.0",
        "typescript": "^5.2.0"
    },
    "dependencies": {
        "@types/nprogress": "^0.2.3",
        "nprogress": "^0.2.0",
        "recharts": "^3.7.0",
        "swr": "^2.3.6",
        "zod": "^4.1.13"
    },
    "overrides": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "qs": "^6.14.0",
        "express": "^4.21.2"
    }
}
